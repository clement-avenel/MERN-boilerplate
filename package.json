{
  "name": "MERN-Boilerplate",
  "description": "A simple MERN boilerplate",
  "version": "0.0.1",
  "author": "clement-avenel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/clement-avenel/MERN-boilerplate.git"
  },
  "main": "index.js",
  "scripts": {
    "lint": "eslint --max-warnings=0 .",
    "client": "cd client && npm start",
    "server": "nodemon index.js",
    "dev": "set NODE_ENV=development && concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "dev:server": "cd client && npm build && cd .. && npm start",
    "test": "cross-env NODE_ENV=test jest --coverage --detectOpenHandles --verbose --testTimeout=10000",
    "start": "set NODE_ENV=production && node index.js",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "./coverage",
    "reporters": [
      "default"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "connect-mongo": "^3.2.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.7",
    "mongoose-unique-validator": "^2.0.3"
  },
  "engines": {
    "node": "v13.x"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.1.0",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^9.0.2",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "superagent": "^6.1.0",
    "supertest": "^6.1.3"
  }
}
