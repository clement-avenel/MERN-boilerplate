{
  "name": "mern-boilerplate",
  "description": "A simple MERN boilerplate",
  "version": "0.0.1",
  "author": "clement-avenel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/clement-avenel/MERN-boilerplate.git"
  },
  "main": "index.js",
  "scripts": {
    "lint": "eslint --max-warnings=0 .",
    "lint:fix": "eslint ./ --fix",
    "client": "cd client && npm start",
    "server": "nodemon index.js",
    "dev": "set NODE_ENV=development && concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "dev:server": "cd client && npm build && cd .. && npm start",
    "test": "cross-env NODE_ENV=test jest --coverage --verbose --testTimeout=20000",
    "start": "set NODE_ENV=production && node index.js",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "jest": {
    "setupFiles": [
      "dotenv/config"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "./coverage",
    "reporters": [
      "default"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "bcrypt": "5.0.1",
    "body-parser": "^1.20.0",
    "connect-mongo": "^4.6.0",
    "cors": "2.8.5",
    "dotenv": "^16.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "jsonwebtoken": "8.5.1",
    "mongoose": "^6.4.0",
    "mongoose-unique-validator": "^3.1.0"
  },
  "engines": {
    "node": "v18.x"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.7.0",
    "concurrently": "^7.2.2",
    "cross-env": "7.0.3",
    "eslint": "^8.18.0",
    "eslint-config-airbnb": "^19.0.4",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "nodemon": "^2.0.18",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "superagent": "^8.0.0",
    "supertest": "^6.2.3"
  }
}
